<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<!--    <include-->
<!--        android:id="@+id/topbar"-->
<!--        layout="@layout/action_bar"-->
<!--        ></include>-->
    <LinearLayout
        android:id="@+id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件位置："
            android:textSize="18dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/phone_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机内存"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/net_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="网络接受" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#9999CC" />

    <LinearLayout
        android:id="@+id/second_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内存位置:" />
        <com.zhch1999.filescan.views.HorizontalListView
            android:id="@+id/horizontal_lv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#9999CC" />
    <LinearLayout
        android:id="@+id/three_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件类型：" />
        <Spinner
            android:id="@+id/file_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/upImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/uplevelfile"
            android:layout_marginRight="20dp"

            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#9999CC" />
    <ListView
        android:id="@+id/filelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:divider="@drawable/list_item_divide_line"
        android:dividerHeight="1dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/order_lin_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/search"
                android:text=""/>
            <Button
                android:id="@+id/buttonOrder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/order"
                android:layout_marginLeft="10dp"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/all_choose_lin_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="gone">
            <CheckBox
                android:id="@+id/checkbox_all_choose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:id="@+id/textView_all_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="全选">
            </TextView>
        </LinearLayout>
        <Button
            android:id="@+id/ensure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确定"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>